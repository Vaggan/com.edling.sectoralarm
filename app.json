{
  "id": "com.edling.sectoralarm",
  "version": "0.0.4",
  "compatibility": ">=5.0.0",
  "sdk": 3,
  "homeyCommunityTopicId": 63591,
  "brandColor": "#FF1C1C",
  "name": {
    "en": "Sector Alarm",
    "sv": "Sector Alarm",
    "no": "Sector Alarm"
  },
  "description": {
    "en": "Home of Safety",
    "sv": "Din trygghet. Vår passion.",
    "no": "En tryggere hverdag med alarm."
  },
  "category": [
    "security"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Christopher Edling",
    "email": "christopher.edling@gmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Frode Heggelund",
        "email": "frode.heggelund@gmail.com"
      }
    ],
    "translators": [
      {
        "name": "Frode Heggelund"
      }
    ]
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "christopheredling"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/Vaggan/com.edling.sectoralarm/issues"
  },
  "homepage": "https://github.com/Vaggan/com.edling.sectoralarm",
  "support": "mailto:christopher.edling@gmail.com",
  "drivers": [
    {
      "id": "sector_alarm_central",
      "name": {
        "en": "Control panel",
        "sv": "Manöverpanel",
        "no": "Kontrollpanel"
      },
      "class": "homealarm",
      "capabilities": [
        "homealarm_state"
      ],
      "capabilitiesOptions": {
        "homealarm_state": {
          "type": "enum",
          "title": {
            "en": "Home Alarm state",
            "sv": "Hemlarmsstatus",
            "no": "Alarm status"
          },
          "values": [
            {
              "id": "armed",
              "title": {
                "en": "Armed",
                "sv": "Larmat",
                "no": "Armert"
              }
            },
            {
              "id": "disarmed",
              "title": {
                "en": "Disarmed",
                "sv": "Avlarmat",
                "no": "Avslått"
              }
            },
            {
              "id": "partially_armed",
              "title": {
                "en": "Partially armed",
                "sv": "Skalskydd",
                "no": "Delvis armert"
              }
            }
          ],
          "getable": true,
          "setable": true,
          "uiComponent": "picker"
        }
      },
      "images": {
        "large": "/drivers/sector_alarm_central/assets/images/large.png",
        "small": "/drivers/sector_alarm_central/assets/images/small.png"
      },
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "homealarm_state_changed",
        "title": {
          "en": "The state changed",
          "sv": "Statusen ändrad",
          "no": "Endret status"
        },
        "args": [
          {
            "name": "state",
            "type": "dropdown",
            "values": [
              {
                "id": "armed",
                "title": {
                  "en": "Armed",
                  "sv": "Larmat",
                  "no": "Armert"
                }
              },
              {
                "id": "disarmed",
                "title": {
                  "en": "Disarmed",
                  "sv": "Avlarmat",
                  "no": "Avslått"
                }
              },
              {
                "id": "partially_armed",
                "title": {
                  "en": "Partially armed",
                  "sv": "Skalskydd",
                  "no": "Skallsikring"
                }
              }
            ]
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "homealarm_state_is",
        "title": {
          "en": "The state is !{{|not}}",
          "sv": "Statusen är !{{|inte}}",
          "no": "Statusen är !{{|ikke}}"
        },
        "args": [
          {
            "name": "state",
            "type": "dropdown",
            "values": [
              {
                "id": "armed",
                "title": {
                  "en": "Armed",
                  "sv": "Larmat",
                  "no": "Armert"
                }
              },
              {
                "id": "disarmed",
                "title": {
                  "en": "Disarmed",
                  "sv": "Avlarmat",
                  "no": "Avslått"
                }
              },
              {
                "id": "partially_armed",
                "title": {
                  "en": "Partially armed",
                  "sv": "Skalskydd",
                  "sv": "Skallsikring"
                }
              }
            ]
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "set_homealarm_state",
        "title": {
          "en": "Set state",
          "sv": "Ställ in status",
          "no": "Endre status"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "class=homealarm&capabilities=homealarm_state"
          },
          {
            "name": "state",
            "type": "dropdown",
            "values": [
              {
                "id": "armed",
                "title": {
                  "en": "Armed",
                  "sv": "Larmat",
                  "no": "Armert"
                }
              },
              {
                "id": "disarmed",
                "title": {
                  "en": "Disarmed",
                  "sv": "Avlarmat",
                  "no": "Avslått"
                }
              },
              {
                "id": "partially_armed",
                "title": {
                  "en": "Partially armed",
                  "sv": "Skalskydd",
                  "no": "Skallsikring"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}